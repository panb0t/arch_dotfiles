#!/bin/zsh             
[global/wm]
margin-bottom = 0
margin-top = 0
 
[bar/main]
monitor-strict = false
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 28
offset-x = 0
offset-y = 0
background = ${color.bg}
foreground = ${color.fg}
radius-top = 0.0
radius-bottom = 0.0
border-size = 1
border-color = ${color.bg}
padding = 0
module-margin-left = 3
module-margin-right = 3
       
font-0 = "Noto Sans:size=10;2"
font-1 = "icomoon\-feather:size=10;2"
font-2 = "Iosevka Nerd Font:size=15;5"

modules-left = sep i3
modules-center = repeat prev play_pause next shuffle
modules-right = cpu ram alsa net1 date sysmenu  

separator =
spacing = 0
dim-value = 1.0
wm-name = 
locale = 
tray-position = none
tray-detached = false
tray-maxsize = 16
tray-transparent = false
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0
enable-ipc = true
click-left = 
click-middle = 
click-right =
scroll-up =
scroll-down =
double-click-left =
double-click-middle =
double-click-right =
cursor-click = 
cursor-scroll = 
                
[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = false
compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over
pseudo-transparency = dalse
           
[color]
bg = #1000000
bg-alt = #1A000000
fg = #EAEAEA
fg-alt = #9C9C9C
trans = #00000000
white = #FFFFFF
black = #000000
red = #e53935
pink = #d81b60
purple = #8e24aa
deep-purple = #5e35b1
indigo = #3949ab
blue = #1e88e5
light-blue = #039be5
cyan = #00acc1
teal = #00897b
green = #43a047
light-green = #7cb342
lime = #c0ca33
yellow = #fdd835
amber = #ffb300
orange = #fb8c00
deep-orange = #f4511e
brown = #6d4c41
grey = #757575
blue-gray = #546e7a

[module/alsa]
type = internal/alsa
format-volume = <ramp-volume> 
label-muted = 
label-muted-foreground = ${color.fg-alt}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 
ramp-volume-0-foreground = ${color.blue}
ramp-volume-1-foreground = ${color.blue}
ramp-volume-2-foreground = ${color.blue}
ramp-volume-3-foreground = ${color.blue}
ramp-volume-4-foreground = ${color.blue}
content-padding = 0
 
[module/ram]
type = internal/memory
interval = 0.5
format = <label>
label = "%gb_used%/%gb_total%"
label-foreground = ${color.teal}
content-padding = 0
 
[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = " %percentage%%"
content-padding = 0
label-foreground = ${color.yellow}

[module/date]
type = internal/date
interval = 1.0
time =  %I:%M %p
time-alt =  %Y-%m-%d%
format = <label>
label = %time%
label-foreground = ${color.orange}
content-padding = 0
 
[module/net1]
type = internal/network
interface = enp6s0
interval = 1.0
accumulate-stats = true
unknown-as-up = true
format-connected = <ramp-signal>
format-disconnected = <label-disconnected>
label-foreground = ${color.green}
label-disconnected = 
label-disconnected-foreground = ${color.fg-alt}         
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-0-foreground = ${color.green}
ramp-signal-1-foreground = ${color.green}
ramp-signal-2-foreground = ${color.green}
ramp-signal-3-foreground = ${color.green}
ramp-signal-4-foreground = ${color.green}
content-padding = 2
 

[module/sysmenu]
type = custom/text
content = 
content-foreground = ${color.red} 
click-left = clearine
content-padding = 2

[module/i3]
type = internal/i3
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = ♟
; NOTE: You cannot skip icons, e.g. to get a ws-icon-6
; you must also define a ws-icon-5.
; NOTE: Icon will be available as the %icon% token inside label-*

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding =4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

; Separator in between workspaces
label-separator = |
label-separator-padding = 2
label-separator-foreground = #ffb52a

[module/prev]
type = custom/text
content = "玲"
content-foreground = ${color.fg}
content-background = ${color.bg}
content-padding = 0
click-left  = cmus-remote -r &

[module/play_pause]
type = custom/script
exec = ~/.config/polybar/scripts/songName.sh &
tail = true
content-padding = 0
click-left  = cmus-remote -u &
interval = 0

[module/next]
type = custom/text
content = "怜"
content-foreground = ${color.fg}
content-background = ${color.bg}
content-padding = 0
click-left  = cmus-remote -n &

[module/shuffle]
type = custom/text
content = "劣"
content-foreground = ${color.fg}
content-background = ${color.bg}
content-padding = 0
click-left  = cmus-remote -S &

[module/repeat]
type = custom/text
content = "凌"
content-foreground = ${color.fg}
content-background = ${color.bg}
content-padding = 0
click-left  = cmus-remote -R &

[module/voice_loopback]
type = custom/text
content = "ﯩ"
content-foreground = ${color.fg}
content-background = ${color.bg}
content-padding = 0
click-left  = cmus-remote -R &
# 凌 稜 綾 玲 契  怜 列 劣

